{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "affinity": {
      "type": "object"
    },
    "containers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string"
          },
          "imagePullPolicy": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "ports": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "containerPort": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "resources": {
            "type": "object"
          }
        }
      }
    },
    "extraServices": {
      "type": "array"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "globalSecurityDefaults": {
      "type": "object",
      "properties": {
        "allowPrivilegeEscalation": {
          "type": "boolean"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "runAsGroup": {
          "type": "integer"
        },
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer"
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            }
          }
        }
      }
    },
    "imagePullSecrets": {
      "type": "array"
    },
    "ingress": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "className": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "tls": {
          "type": "array"
        }
      }
    },
    "ingresses": {
      "type": "array"
    },
    "initContainers": {
      "type": "array"
    },
    "karpenter": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "nodePool": {
          "type": "string"
        },
        "tolerations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "effect": {
                "type": "string"
              },
              "key": {
                "type": "string"
              },
              "operator": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "keda": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "maxReplicas": {
          "type": "integer"
        },
        "minReplicas": {
          "type": "integer"
        },
        "triggers": {
          "type": "array"
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "nodeSelector": {
      "type": "object"
    },
    "pdb": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "string"
        },
        "maxUnavailable": {
          "type": "null"
        },
        "minAvailable": {
          "type": "null"
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "accessMode": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "mount": {
          "type": "object",
          "properties": {
            "defaultEnabled": {
              "type": "boolean"
            },
            "mountPath": {
              "type": "string"
            },
            "subPath": {
              "type": "string"
            }
          }
        },
        "size": {
          "type": "string"
        },
        "storageClass": {
          "type": "string"
        }
      }
    },
    "podAnnotations": {
      "type": "object"
    },
    "podLabels": {
      "type": "object"
    },
    "securityProfiles": {
      "type": "object",
      "properties": {
        "privileged": {
          "type": "object",
          "properties": {
            "allowPrivilegeEscalation": {
              "type": "boolean"
            },
            "capabilities": {
              "type": "object",
              "properties": {
                "add": {
                  "type": "array"
                },
                "drop": {
                  "type": "array"
                }
              }
            },
            "privileged": {
              "type": "boolean"
            },
            "runAsGroup": {
              "type": "integer"
            },
            "runAsNonRoot": {
              "type": "boolean"
            },
            "runAsUser": {
              "type": "integer"
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "headless": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "publishNotReadyAddresses": {
              "type": "boolean"
            }
          }
        },
        "labels": {
          "type": "object"
        },
        "port": {
          "type": "integer"
        },
        "ports": {
          "type": "array"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "tolerations": {
      "type": "array"
    },
    "topologySpreadConstraints": {
      "type": "array"
    },
    "workload": {
      "type": "object",
      "properties": {
        "replicas": {
          "type": "integer"
        },
        "revisionHistoryLimit": {
          "type": "integer"
        },
        "strategy": {
          "type": "object"
        },
        "terminationGracePeriodSeconds": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "updateStrategy": {
          "type": "object"
        }
      }
    }
  }
}
